{
  "compilerOptions": {
    "baseUrl": ".",
    "strict": true,
    "target": "ESNext",
    "module": "ESNext",
    "declaration": true,
    "emitDeclarationOnly": true,
    "composite": true,
    "incremental": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "strictNullChecks": false,
    "moduleResolution": "node",
    "jsx": "preserve",
    "paths": {
      "jsx-instruction": ["./src"],
      "jsx-instruction/*": ["./src/*"]
    }
  },
}

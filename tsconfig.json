{
  "compilerOptions": {
    "strict": true,
    "target": "ESNext",
    "module": "ESNext",
    "declaration": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "strictNullChecks": false,
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "jsxImportSource": "jsx-instruction/react",
    "outDir": "dist",
    "baseUrl": ".",
    "rootDir": "src",
    "paths": {
      "jsx-instruction": ["./src"],
      "jsx-instruction/*": ["./src/*"]
    }
  }
}
